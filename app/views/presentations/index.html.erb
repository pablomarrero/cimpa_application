<div class="page-header">
  <h1><%=t '.title' %></h1>
  <div class="alert alert-error">
    <%= t '.preproposal_notice' %>
  </div>
</div>
<%= paginate @presentations %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.proposal_state') %></th>
      <th><%= t('.user') %></th>
      <th><%= t('.region') %></th>
      <th><%= t('.school_country') %></th>
      <th><%= t('.acronym') %></th>
      <th><%= t('.research_school_title') %></th>
      <th><%= t('.project_type') %></th>
      <th><%=t 'actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @presentations.each do |presentation| %>
      <tr>
        <td><%= presentation.proposal_state %></td>
        <td><%= presentation.user.email %></td>
        <td><%= presentation.country.try(:region) %></td>
        <td><%= presentation.country.try(:name_fr) %></td>
        <td><%= presentation.acronym %></td>
        <td><%= presentation.research_school_title %></td>
        <td><%= presentation.project_type %></td>
        <td>
          <%= link_to t('view', :default => t('helpers.links.show')), 
                      presentation_path(presentation), :class => 'btn btn-mini' %>
          <%= link_to t('edit', :default => t("helpers.links.edit")),
                      edit_presentation_path(presentation), :class => 'btn btn-mini' if current_user.id == presentation.user.id && open_final_presentations?%>
          <%= link_to t('destroy', :default => t("helpers.links.destroy")),
                      presentation_path(presentation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger'  if current_user.id == presentation.user.id && open_new_presentations?%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @presentations %>
<%= link_to t('new'), new_presentation_path, :class => 'btn btn-primary' if open_new_presentations?%>
<%= link_to 'Export to Excel', url_for(:format => 'xls'), :class => 'btn btn-default' %>
