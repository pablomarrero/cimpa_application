<div class="page-header">
  <h1><%=t '.title' %></h1>
  <div class="alert alert-error">
    <%= t '.preproposal_notice' %>
  </div>
</div>
<%= paginate @presentations %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.id') %></th>
      <th><%= t('.proposal_state') %></th>
      <th><%= t('.research_school_title') %></th>
      <th><%= t('.school_country') %></th>
      <th><%= t('.school_place') %></th>
      <th><%= t('.local_contact') %></th>
      <th><%= t('.officer_in_place') %></th>
      <th><%= t('.dates') %></th>
      <th><%=t 'actions' %></th>
    </tr>
  </thead>
  <tbody>
    <% @presentations.each do |presentation| %>
      <tr>
        <td><%= presentation.id %></td>
        <td><%= presentation.proposal_state %></td>
        <td><%= presentation.research_school_title %></td>
        <td><%= presentation.school_country %></td>
        <td><%= presentation.school_place %></td>
        <td><%= presentation.local_contact.administration_name if presentation.local_contact %></td>
        <td><%= presentation.scientific_contact.scientific_name if presentation.scientific_contact %></td>
        <td><%= presentation.school_date_a_start %> TO <%= presentation.school_date_a_finish %><br />OR<br /><%= presentation.school_date_b_start %> TO <%= presentation.school_date_b_finish %></td>
        <td>
          <%= link_to t('view', :default => t('helpers.links.show')), 
                      presentation_path(presentation), :class => 'btn btn-mini' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @presentations %>
