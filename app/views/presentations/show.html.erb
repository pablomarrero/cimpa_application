  <div class="control-group">
    <%= t('.young_people') %>
    <div class="controls">
      <pre><%= @presentation.young_people %></pre>
    </div>
  </div>
  <hr>
  <p><h6><%= t('.time_scientific_text') %></h6></p>
  <div class="row-fluid">
    <div class="control-group span3">
      <%= t('.average_time_scientific') %>
      <div class="controls">
        <pre><%= @presentation.average_time_scientific %></pre>
      </div>
    </div>
    <div class="control-group span3">
      <%= t('.day_time_scientific') %>
      <div class="controls">
        <pre><%= @presentation.day_time_scientific %></pre>
      </div>
