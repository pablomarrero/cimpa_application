  </div>
  <hr>
  <div class="control-group">
    <%= t('.completely_read_html') %>
    <div class="controls">
      <pre><%= @presentation.completely_read %></pre>
    </div>
  </div>
  <hr>
  <div class="control-group">
    <%= t('.research_school_title') %>
