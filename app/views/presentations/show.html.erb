  <hr>
  <div class="control-group">
    <%= t('.courses_html') %>
    <div class="controls">
      <div class="row-fluid">
        <div class="span1">
          <%= t('.course1') %>
        </div>
        <div class="span11">
          <pre><%= @presentation.course1 %></pre>
        </div>
