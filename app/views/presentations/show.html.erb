  <hr>
  <div class="control-group">
    <%= t('.tentative_schedule_html') %>
    <div class="controls">
      <pre><%= @presentation.tentative_schedule %></pre>
    </div>
  </div>
  <% if @presentation.tentative_schedule_file.present? %>
    <div class="control-group">
      <%= t('.tentative_schedule_file') %>
      <div class="controls">
          <%= link_to t('download'), download_tentative_schedule_file_path(@presentation), :class => 'btn' %>
      </div>
    </div>
  <% end %> 

  <hr>
  <div id="provisional_budget" class="row-fluid">
    <div >
      <fieldset class="provisional_budget">
        <legend class="no-margin-bottom"><%= t('.provisional_budget')%></legend>
        <table class="table table-striped well table-condensed">
          <thead>
            <tr>
              <th class="span5"><%= t('.provisional_description') %></th>
              <th class="span2"><%= t('.currency') %></th>
              <th class="span2"><%= t('.provisional_amount') %></th>
              <th class="span2"><%= t('.provisional_type') %></th>
            </tr>
          </thead>
          <tbody>
            <% @presentation.provisional_budgets.each do |pro| %>
            <tr>
              <td class="span5"><pre><%= pro.description %></pre></td>
              <td class="span2"><pre><%= pro.currency.try(:symbol) %></pre></td>
              <td class="span2"><pre><%= pro.amount %></pre></td>
              <td class="span2"><pre><%= pro.provisional_type %></pre></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </fieldset>
    </div>
  </div>
