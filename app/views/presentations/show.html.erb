      <div class="controls">
        <pre><%= @presentation.school_date_b %></pre>
      </div>
    </div>
  </div>  
  <hr>
  <fieldset class="row-fluid">
    <legend><%= raw t '.coordinators' %></legend>
    <h5><%= t '.administration_coordinator' %></h5>
    <div class="row-fluid">
      <div class="control-group span2">
        <%= t('.administration_name') %>
        <div class="controls">
          <pre><%= @presentation.administration_name %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.administration_place') %>
        <div class="controls">
          <pre><%= @presentation.administration_place %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.administration_email') %>
        <div class="controls">
          <pre><%= @presentation.administration_email %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.administration_phone') %>
        <div class="controls">
          <pre><%= @presentation.administration_phone %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.administration_cv') %>
        <div class="controls">
          <% if @presentation.administration_cv.present? %>
            <%= link_to t('download'), download_administration_cv_path(@presentation), :class => 'btn' %>
          <% end %>
        </div>
      </div>
    </div>
    <hr>
    <h5><%= t '.scientific_coordinator' %></h5>
    <div class="row-fluid">
      <div class="control-group span2">
        <%= t('.scientific_name') %>
        <div class="controls">
          <pre><%= @presentation.scientific_name %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.scientific_place') %>
        <div class="controls">
          <pre><%= @presentation.scientific_place %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.scientific_email') %>
        <div class="controls">
          <pre><%= @presentation.scientific_email %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.scientific_phone') %>
        <div class="controls">
          <pre><%= @presentation.scientific_phone %></pre>
        </div>
      </div>
      <div class="control-group span2">
        <%= t('.scientific_cv') %>
        <div class="controls">
          <% if @presentation.scientific_cv.present? %>
            <%= link_to t('download'), download_scientific_cv_path(@presentation), :class => 'btn' %>
          <% end %>
        </div>
      </div>
    </div>
  </fieldset>
  <hr>
  <div class="control-group">
    <%= t('.scientific_content') %>
    <div class="controls">
      <pre><%= @presentation.scientific_content %></pre>
    </div>
  </div>
  <hr>
  <p><blockquote><h5><%= t('.balance_woman') %></h5></blockquote></p>
  <hr>
  <div class="control-group">
    <%= t('.members_of_scientific_committee_html') %>
    <div class="controls">
      <pre><%= @presentation.members_of_scientific_committee %></pre>
    </div>
  </div>
  <hr>
  <div class="control-group">
    <%= t('.members_of_local_committee') %>
    <div class="controls">
