  <hr>
  <div class="control-group">
    <%= t('.infrastructure') %>
    <div class="controls">
      <pre><%= @presentation.infrastructure %></pre>
    </div>
  </div>
  <hr>
  <div class="control-group">
    <%= t('.courses_html') %>
    <div class="controls">
      <div class="row-fluid">
        <div class="span1">
          <%= t('.course1') %>
        </div>
        <div class="span11">
          <pre><%= @presentation.course1 %></pre>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span1">
          <%= t('.course2') %>
        </div>
        <div class="span11">
          <pre><%= @presentation.course2 %></pre>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span1">
