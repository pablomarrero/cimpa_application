  </div>
  <hr>
  <div class="row-fluid">
    <div class="control-group span12">
      <%= t('.comment') %>
      <div class="controls">
        <pre><%= @presentation.comment %></pre>
      </div>
    </div>
  </div>
  <hr>
  <p><blockquote><h5><%= t('.notified_text') %></h5></blockquote></p>
  <p><blockquote><h5><%= t('.notified2_text') %></h5></blockquote></p>
  <div class="control-group">
    <%= t('.confirmation_completely_read_html') %>
    <div class="controls">
      <pre><%= @presentation.confirmation_completely_read %></pre>
    </div>
  </div>
</div>
<div class="form-actions hand_writer">
  <%= link_to t('back', :default => t("helpers.links.back")),
              presentations_path, :class => 'btn'  %>
  <%= link_to t('edit', :default => t("helpers.links.edit")),
              edit_presentation_path(@presentation), :class => 'btn' %>
  <%= link_to t('pre_proposal'),
              pre_proposal_path(@presentation), :class => 'btn' %>
  <%= link_to t('final_proposal'),
              final_proposal_path(@presentation), :class => 'btn' %>
  <%= link_to t('destroy', :default => t("helpers.links.destroy")),
              presentation_path(@presentation),
              :method => 'delete',
              :data => { :confirm => t('confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
