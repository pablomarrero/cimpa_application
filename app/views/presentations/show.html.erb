              <td class="span5"><pre><%= pro.description %></pre></td>
              <td class="span2"><pre><%= pro.currency.try(:symbol) %></pre></td>
              <td class="span2"><pre><%= pro.amount %></pre></td>
              <td class="span2"><pre><%= pro.anticipated_type %></pre></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </fieldset>
    </div>
