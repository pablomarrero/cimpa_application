    </div>
    <div class="control-group">
      <%= t('.school_country_text') %>
      <div class="controls">
        <pre><%= @presentation.country.try(:name_fr) %></pre>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="alert alert-info span6">
      <div class="control-group">
        <%= t('.school_date_a_start') %>
        <div class="controls">
          <pre><%= @presentation.school_date_a_start %></pre>
        </div>
      </div>
      <div class="control-group">
        <%= t('.school_date_a_finish') %>
        <div class="controls">
          <pre><%= @presentation.school_date_a_finish %></pre>
        </div>
      </div>
    </div>
    <div class="alert alert-info span6">
      <div class="control-group">
        <%= t('.school_date_b_start') %>
        <div class="controls">
          <pre><%= @presentation.school_date_b_start %></pre>
        </div>
      </div>
      <div class="control-group">
        <%= t('.school_date_b_finish') %>
        <div class="controls">
          <pre><%= @presentation.school_date_b_finish %></pre>
        </div>
      </div>
    </div>
  </div>  
  <hr>
  <h4><%= raw t '.responsables' %></h4>
  <p><%= t '.responsables_html' %></p>
  <div class="row-fluid">
    <div class="alert alert-info span6">
        <h5><%= t '.local_coordinator' %></h5>
        <div class="control-group">
          <%= t('.administration_name') %>
          <div class="controls">
            <pre><%= @presentation.local_contact.administration_name if @presentation.local_contact %></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.administration_place') %>
          <div class="controls">
            <pre><%= @presentation.local_contact.administration_place if @presentation.local_contact%></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.administration_country') %>
          <div class="controls">
            <pre><%= @presentation.local_contact.country.try(:name_fr) if @presentation.local_contact%></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.administration_email') %>
          <div class="controls">
            <pre><%= @presentation.local_contact.administration_email if @presentation.local_contact%></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.administration_phone') %>
          <div class="controls">
            <pre><%= @presentation.local_contact.administration_phone if @presentation.local_contact%></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.administration_cv') %>
          <div class="controls">
            <% if @presentation.local_contact && @presentation.local_contact.administration_cv.present? %>
              <%= link_to t('download'), download_administration_cv_path(@presentation), :class => 'btn' %>
            <% end %>
          </div>
        </div>
    </div>
    <div class="alert alert-info span6">
        <h5><%= t '.foreign_coordinator' %></h5>
        <div class="control-group">
          <%= t('.scientific_name') %>
          <div class="controls">
            <pre><%= @presentation.scientific_contact.scientific_name if @presentation.scientific_contact%></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.scientific_place') %>
          <div class="controls">
            <pre><%= @presentation.scientific_contact.scientific_place if @presentation.scientific_contact %></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.scientific_country') %>
          <div class="controls">
            <pre><%= @presentation.scientific_contact.country.try(:name_fr) if @presentation.scientific_contact%></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.scientific_email') %>
          <div class="controls">
            <pre><%= @presentation.scientific_contact.scientific_email if @presentation.scientific_contact %></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.scientific_phone') %>
          <div class="controls">
            <pre><%= @presentation.scientific_contact.scientific_phone if @presentation.scientific_contact %></pre>
          </div>
        </div>
        <div class="control-group">
          <%= t('.scientific_cv') %>
          <div class="controls">
            <% if @presentation.scientific_contact && @presentation.scientific_contact.scientific_cv.present? %>
              <%= link_to t('download'), download_scientific_cv_path(@presentation), :class => 'btn' %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
  <hr>
  <div class="control-group">
    <%= t('.scientific_content') %>
    <div class="controls">
      <pre><%= @presentation.scientific_content %></pre>
    </div>
  </div>
  <hr>
  <p><blockquote><h5><%= t('.balance_woman') %></h5></blockquote></p>
  <hr>
  <div class="control-group">
    <%= t('.members_of_scientific_committee_html') %>
    <div class="controls">
      <pre><%= @presentation.members_of_scientific_committee %></pre>
