<!-- Modal -->
<div id="<%=id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%= title %></h3>
  </div>
  <div class="modal-body">
    <%= form_tag( path, :html => { :class => 'hand_writer'} ) do %>
      <div class="well">
        <div class="control-group">
          <%= label_tag t('.evaluator') %>
          <div class="controls">
            <%= select_tag "evaluator", options_from_collection_for_select(@evaluators, "id", "email"), :class => "comment_#{id}"%>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type='submit' class="btn btn-primary"><%=t 'save' %></button>
        <button class="btn" data-dismiss="modal" aria-hidden="true"><%=t 'cancel' %></button>
      </div>
    <% end %>
  </div>
</div>
