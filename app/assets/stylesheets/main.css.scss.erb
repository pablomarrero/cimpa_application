.btn-xlarge {
  border: 0 none;
  border-radius: 6px 6px 6px 6px;
  padding: 28px 38px;
  font-size: 22px;
  font-weight: 200;
  line-height: normal;
  -webkit-border-radius: 18px;
  -moz-border-radius: 18px;
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1) inset, 0 1px 5px rgba(0, 0, 0, 0.25);
  color: #FFFFFF !important;
  transition: none 0s ease 0s;
}

.btn-xxlarge {
  border: 0 none;
  border-radius: 6px 6px 6px 6px;
  padding: 28px 38px;
  font-size: 42px;
  font-weight: 200;
  line-height: normal;
  -webkit-border-radius: 18px;
  -moz-border-radius: 18px;
  box-shadow: 0 1px 0 rgba(255, 255, 255, 0.1) inset, 0 1px 5px rgba(0, 0, 0, 0.25);
  color: #FFFFFF !important;
  transition: none 0s ease 0s;
}
